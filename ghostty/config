theme = tokyonight

# ----------------------------------------
# Typography
# ----------------------------------------
font-size = 16
# Cross-platform font fallback: SF Mono (macOS), Fira Code (Linux)
font-family = SF Mono
adjust-cell-height = 15%

# ----------------------------------------
# Mouse Behavior
# ----------------------------------------
mouse-hide-while-typing = true
