window-theme = dark
title = " "

# ----------------------------------------
# Window Layout & Spacing
# ----------------------------------------
window-padding-x = 12
window-padding-y = 12
window-padding-balance = true

# ----------------------------------------
# Visual Effects
# ----------------------------------------
background-opacity = .93
